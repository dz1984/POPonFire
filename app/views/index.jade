extends layouts/default

block content
    .main.container
        .ui.left.aligned
            .navbar
                .ui.right.aligned.header                  
                    i.circular.question.icon 
                    | 何謂火線         
            .logo
                img.ui.medium.image(src="http://placehold.it/350x150&text=POP+on+Fire(Pre-Alpha)")

            
        .ui.segment.fire-map
            .ui.red.ribbon.label 
              | 火線地圖
            #fire-map-canvas
            
        .ui.segment.search-box   
            .ui.blue.ribbon.label 
              | 檢索
            .search-bar
                .ui.selection.dropdown
                    input(type="hidden", name="city")
                    .default.text
                        | 地點
                    i.dropdown.icon
                    .menu
                        .item(data-value='')
                            | 地點
                        -var cityList = JSON.parse(cities)
                        -for(var city in cityList)
                            .item(data-value='#{city}') 
                              | #{city}  

                .ui.selection.dropdown
                    input(type="hidden", name="devWay")
                    .default.text
                        | 開發方式
                    i.dropdown.icon
                    .menu
                        .item(data-value='')
                            | 開發方式
                        -var devWayList = JSON.parse(devWays)
                        -for(var devWay in devWayList)
                            .item(data-value='#{devWay}') 
                              | #{devWay}                  
   
                .ui.selection.dropdown
                    input(type="hidden", name="unit")
                    .default.text
                        | 經營單位
                    i.dropdown.icon
                    .menu
                        .item(data-value='')
                            | 經營單位
                        -var unitList = JSON.parse(units)
                        -for(var unit in unitList)
                            .item(data-value='#{unit}') 
                                | #{unit}                                        
                
                .ui.icon.input
                 input(type="text",placeholder="地名, 人名...")
                 i.inverted.search.icon
                      
        .ui.segment.piece-map    
          .ui.three.column.grid 
        

        
